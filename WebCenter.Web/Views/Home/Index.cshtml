<div class="aukey_contain">
    <div class="amaz_banr">
        <div class="amaz_banr_box">
            <div id="focus" class="focus">
                <div class="hd">
                    <ul></ul>
                </div>
                <div class="bd">
                    <ul>
                        
                        @{
                            var i = 0;
                        }
                        @foreach (var item in ViewData.Model.Play)
                        {
                           
                            <li style="border-left:none;">
                                <a title="" href="@item.Link">
                                    <div class="banner_0@i" style="background-image: url(@item.ImagePath);    background-size: cover; background-repeat:no-repeat; "></div>
                                </a>
                            </li>                            
                            i++;
                        }



                    </ul>
                </div>
            </div>
            <script type="text/javascript">
                var w = $(window).width();

                $('.bd > ul').attr('style', 'width: ' + 5 * w + 'px; position: relative; overflow: hidden; padding: 0px; margin: 0px; transition-duration: 600ms; transform: translate(0px, 0px) translateZ(0px)');
            </script>

            <div class="min-banner">
                <ul>

                  
                    @{var j = 1;}
                    @foreach (var item in ViewData.Model.Four)
                    {
                       
                        <li class="ban_sm_@j" style="height:100%!important;">
                            <div class="ban_sm_@j con" style="background-image: url(@item.ImagePath);background-size: cover; background-repeat:no-repeat;">
                                <a href="@item.Link"></a>
                            </div>
                        </li>
                        if (j == 4)
                        {
                            j = 1;
                        }
                        else
                        {
                            j++;
                        }
                     
                    }

                </ul>
            </div>


            <script>
                /* TouchSlide({
                     slideCell:"#focus",
                     titCell:".hd ul",
                     mainCell:".bd ul",
                     delayTime:1000,
                     interTime:4800,
                     effect:"leftLoop",
                     autoPlay:true,
                     autoPage:true,
                     switchLoad:"_src"
                 });*/
            </script>
        </div>
    </div>
</div>